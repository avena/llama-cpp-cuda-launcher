{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "composer: install",
      "type": "shell",
      "command": "${env:COMPOSER_BIN:-composer} install",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "phpstan: analyse",
      "type": "shell",
      "command": "${env:PHP_BIN:-php} vendor/bin/phpstan analyse -l max",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "phpunit: run",
      "type": "shell",
      "command": "${env:PHP_BIN:-php} vendor/bin/phpunit",
      "group": "test",
      "problemMatcher": []
    }
  ]
}
